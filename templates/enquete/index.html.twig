{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/enquete.css') }}">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/enquete.js') }}"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
{% endblock %}

{% block title %}Enquête{% endblock %}

{% block main %}

<h1 class="medium font-28">L'enquête</h1>
<section>
    <div id="barre">
        <div id="progression"></div>
    </div>
    <div id="numQuestion" class="font-16 bold"></div>
    <div id="question" class="font-26 regular"></div>
    <ul id="reponses">

    </ul>
    <button id="changementQuestion">Question suivante</button>
    
</section>
<a href="{{ path('app_resultats') }}" id="resultats" style="display:none"><button>Voir les résultats</button></a>
<div>
    <div id="div-questions" data-questions="{{ questions }}"></div>
    <div id="div-reponses" data-reponses="{{ reponses }}"></div>
</div>
{% endblock %}